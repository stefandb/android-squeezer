<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/volume_adjust_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/panel_background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="70dp">

    <TextView
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/additional_message"
        android:textAppearance="@style/SqueezerTextItemSmall"
        tools:text="Lounge Squeezebox"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="340dp"
        android:layout_height="fill_parent"
        android:weightSum="1">

        <ImageView
            android:id="@+id/ringer_stream_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            tools:src="@drawable/ic_volume"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="15dp"/>

        <SeekBar
            style="?android:attr/progressBarStyleHorizontal"
            android:id="@+id/level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>

</LinearLayout>
