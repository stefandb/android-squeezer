<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textAppearance="@style/SqueezerTextAppearance.ListItem.Primary"
        tools:text="Group name" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:gravity="center_vertical"
        android:textAppearance="@style/SqueezerTextAppearance.ListItem.Secondary"
        tools:text="Song name" />

    <com.mikepenz.iconics.view.IconicsImageView
        android:id="@+id/parent_list_item_expand_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:iiv_color="@android:color/black"
        app:iiv_icon="gmd-arrow-drop-down"
        android:contentDescription="@string/app_name"
        android:maxHeight="30dp"
        android:maxWidth="30dp"
        android:minHeight="30dp"
        android:minWidth="30dp"
        android:gravity="end"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>