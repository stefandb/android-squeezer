<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:descendantFocusability="beforeDescendants">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:paddingLeft="4dp"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingRight="4dp"
        android:background="@drawable/selector_card_background"
        android:descendantFocusability="afterDescendants">

        <uk.org.ngo.squeezer.widget.SquareImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="@string/app_name"
            android:maxHeight="80dp"
            android:src="@drawable/icon_album_noart"
            android:maxWidth="@dimen/album_art_icon_width"
            android:minHeight="@dimen/album_art_icon_height"
            android:minWidth="@dimen/album_art_icon_width"
            android:layout_marginRight="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text1"
                android:layout_width="fill_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SqueezerTextAppearance.ListItem.Primary"/>

            <TextView
                android:id="@+id/text2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textAppearance="@style/SqueezerTextAppearance.ListItem.Secondary"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>